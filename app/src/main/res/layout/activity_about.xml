<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/walpaper"
    tools:context=".AboutActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:background="#4DFFFFFF">


        <TextView
            android:id="@+id/judul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aclonica"
            android:gravity="center"
            android:textColor="@android:color/primary_text_light"
            android:padding="20dp"
            android:text="Smart Presence ( GPS )"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.05" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:text="(PT. Usaha Gas Mandiri)"
            android:gravity="center"
            android:fontFamily="@font/carter_one"
            android:textSize="14dp"/>

    <TextView
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:fontFamily="@font/carter_one"
        android:textSize="14dp"
        android:text="Mempersembahkan kemudahan sistem absensi karyawan hanya
dengan menggunakan Smartphone. Memanfaatkan teknologi GPS, sehingga dapat menggantikan mesin absensi tradisional.
Karyawan hanya bisa melakukan Absensi jika sudah berada pada titik lingkungan kantor PT. Usaha Gas Mandiri."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/judul"/>
    <TextView
        android:id="@+id/foot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="@font/carter_one"
        android:textSize="14dp"
        android:text="Sistem absensi yang berkembang saat ini menggunakan metode Geofancing dan Hafersine dimana
 Metode Haversine yaitu untuk melakukan perhitungan jarak antara titik lokasi perusahaan atau
 instansi yang terkait, dengan device user yang melakukan peroses persensi sehingga persensi tersebut
 dapat dibatasi dan Metode Geofencing sebagai penenda area akses yang dapat di lihat oleh maps"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/body"/>


    <TextView
        android:id="@+id/end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="15dp"
        android:textStyle="italic"
        android:text="Copyright_2020"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foot"/>


</LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>